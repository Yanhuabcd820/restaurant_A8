<form action="/todos" method="POST" class="container mt-5 mb-5">

  <div class="row mt-3 justify-content-center flex-nowrap">
    <div class="mb-1 flex-column flex-wrap mr-2 ml-2 col-4 ">
      <div class="text-secondary col-12">
        <i class="fas fa-utensils pr-2"></i>
        餐廳名稱：
      </div>
      <div class="">
        <input type="text" name="name" id="" placeholder="餐廳名稱" class="p-2 col-12" required="required">
      </div>
    </div>
    <div class="mb-1 flex-column flex-wrap mr-2 ml-2 col-4 ">
      <div class="text-secondary">
        <i class="fas fa-utensils pr-2"></i>
        類別：
      </div>
      <input type="text" name="category" id="" placeholder="類別" class="p-2 col-12" required="required">
    </div>
    <div class="mb-1 flex-column flex-wrap mr-2 ml-2 col-4">
      <div class="text-secondary">
        <i class="fas fa-utensils pr-2"></i>
        圖片：
      </div>
      <input type="text" name="image" id="" placeholder="圖片" class="p-2 col-12" required="required">
    </div>

  </div>
  <div class="row mt-3 justify-content-center flex-nowrap">
    <div class="mb-1 flex-column flex-wrap col-12">
      <div class="text-secondary col-12">
        <i class="fas fa-map-marker-alt pr-2"></i>
        地址：
      </div>
      <input type="text" name="location" id="" placeholder="地址" class="p-2 col-12" required="required">
    </div>

  </div>
  <div class="row mt-3 justify-content-center flex-nowrap">
    <div class="mb-1 flex-column flex-wrap mr-2 ml-2 col-4 ">
      <div class="text-secondary">
        <i class="fas fa-mobile-alt pr-2"></i>
        電話：
      </div>
      <input type="text" name="phone" id="" placeholder="電話" class="p-2 col-12" required="required">
    </div>
    <div class="mb-1 flex-column flex-wrap mr-2 ml-2 col-4 ">
      <div class="text-secondary">
        <i class="fas fa-location-arrow pr-2 fa-xs"></i>gogle地圖：
      </div>
      <input type="text" name="google_map" id="" placeholder="gogle地圖" class="p-2 col-12" required="required">
    </div>
    <div class="mb-1 flex-column flex-wrap mr-2 ml-2 col-4 ">
      <div class="text-secondary">
        <i class="fas fa-star fa-xs pr-2"></i>評分：
      </div>
      <input type="text" name="rating" id="" placeholder="評分" class="p-2 col-12" required="required">
    </div>

  </div>
  <div class="row mt-3 justify-content-center flex-nowrap">
    <div class="mb-1 col-12">
      <span class="text-secondary">
        <i class="fas fa-star fa-xs pr-2"></i>描述：
      </span>
      <textarea name="description" id="" placeholder="描述" class="p-2" style="width:100%; height:80px;"
        required="required"></textarea>
    </div>

  </div>
  <button class=" mt-3 btn btn-major">新增餐廳</button>
</form>